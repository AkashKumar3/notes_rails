<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="grid grid-cols-1 md:grid-cols-2 min-h-[80vh]">

    <!-- LEFT -->
    <div class="flex flex-col justify-center">
      <div class="w-full max-w-md">

        <h1 class="text-5xl font-bold text-black tracking-tight">
          Log in
        </h1>

        <p class="mt-4 text-xl font-medium text-black/80">
          Welcome back
        </p>

        <!-- Devise error -->
        <% if alert.present? %>
          <div class="mt-6 rounded-md border-2 border-red-500 bg-red-50 px-4 py-3 text-red-700">
            <%= alert %>
          </div>
        <% end %>

        <div class="mt-8">
          <%= form_for(resource,
                as: resource_name,
                url: session_path(resource_name),
                html: { class: "space-y-6" }) do |f| %>

            <div class="space-y-1">
              <%= f.label :email, class: "block text-sm font-medium text-black" %>
              <%= f.email_field :email,
                    autofocus: true,
                    autocomplete: "email",
                    class: "block w-full rounded-md border-2 border-black px-4 py-3 text-base focus:outline-none" %>
            </div>

            <div class="space-y-1">
              <%= f.label :password, class: "block text-sm font-medium text-black" %>
              <%= f.password_field :password,
                    autocomplete: "current-password",
                    class: "block w-full rounded-md border-2 border-black px-4 py-3 text-base focus:outline-none" %>
            </div>

            <div>
              <%= f.submit "Log in",
                    class: "mt-4 inline-block text-xl font-medium border-2 border-black rounded-md px-6 py-2 text-black hover:-ml-1 hover:-mt-1 hover:border-b-4 hover:border-r-4 transition-all" %>
            </div>

          <% end %>

          <div class="mt-6 text-sm text-black/80">
            <%= render "devise/shared/links" %>
          </div>

        </div>
      </div>
    </div>

    <!-- RIGHT -->
    <div class="hidden md:flex items-center justify-center">
      <%= image_tag "notes_graphic.png", class: "max-w-md w-full" %>
    </div>

  </div>
</div>
