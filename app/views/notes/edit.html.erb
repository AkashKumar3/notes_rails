<% content_for :title, "Edit Note" %>

<div class="min-h-screen bg-zinc-50">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-12">

    <!-- Header -->
    <div class="mb-10">
      <h1 class="text-4xl font-semibold tracking-tight text-zinc-900">
        Edit note
      </h1>
      <p class="mt-1 text-sm text-zinc-500">
        Update your thoughts and keep them organized
      </p>
    </div>

    <!-- Form Card -->
    <div class="rounded-xl border border-zinc-200 bg-white p-6 shadow-sm">
      <%= render "form", note: @note %>

      <!-- Actions -->
      <div class="mt-8 flex flex-wrap gap-3">
        <%= link_to "View note",
              @note,
              class: "text-sm font-medium border-2 border-black rounded-md px-4 py-2 hover:-ml-1 hover:-mt-1 hover:border-b-4 hover:border-r-4 transition" %>

        <%= link_to "Back to notes",
              notes_path,
              class: "text-sm font-medium border-2 border-black rounded-md px-4 py-2 hover:-ml-1 hover:-mt-1 hover:border-b-4 hover:border-r-4 transition" %>
      </div>
    </div>

  </div>
</div>
