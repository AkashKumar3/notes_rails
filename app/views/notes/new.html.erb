<% content_for :title, "New note" %>

<div class="min-h-screen bg-zinc-50 flex justify-center items-start py-12 px-4 sm:px-6 lg:px-8">

  <div class="w-full md:w-2/3 bg-white rounded-xl shadow-md p-8">

    <!-- Header -->
    <h1 class="text-4xl font-bold text-zinc-900 mb-6">
      Create New Note
    </h1>
    <p class="text-zinc-500 mb-8">
      Add your thoughts, reminders, or todos below. Make it colorful and organized.
    </p>

    <!-- Form -->
    <%= render "form", note: @note %>

    <!-- Back Link -->
    <div class="mt-6">
      <%= link_to "Back to notes",
            notes_path,
            class: "inline-block text-sm font-medium text-zinc-900 border border-zinc-300 rounded-md px-4 py-2 hover:bg-zinc-100 transition" %>
    </div>

  </div>
</div>
