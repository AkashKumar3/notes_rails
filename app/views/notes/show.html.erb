<% content_for :title, "Note" %>

<div class="min-h-screen bg-zinc-50 py-12">
  <div class="mx-auto max-w-3xl px-4">

    <!-- Flash -->
    <% if notice.present? %>
      <div class="mb-6 rounded-lg bg-emerald-100/70 px-4 py-3 text-emerald-800 text-sm font-medium">
        <%= notice %>
      </div>
    <% end %>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-4xl font-semibold tracking-tight text-zinc-900">
        Note
      </h1>
      <p class="mt-1 text-sm text-zinc-500">
        Your saved thought
      </p>
    </div>

    <!-- Card -->
    <div
      class="rounded-xl border border-zinc-200 p-6 shadow-sm"
      style="background-color: <%= @note.color.presence || '#ffffff' %>;"
    >
      <div class="space-y-3 text-zinc-900">
        <%= render @note %>
      </div>

      <!-- Divider -->
      <div class="my-6 h-px bg-zinc-100"></div>

      <!-- Actions -->
      <div class="flex flex-wrap gap-3">
        <%= link_to "Edit",
              edit_note_path(@note),
              class: "border-2 border-black rounded-md px-4 py-1 text-sm font-medium hover:-ml-1 hover:-mt-1 hover:border-b-4 hover:border-r-4 transition" %>

        <%= link_to "Back",
              notes_path,
              class: "border-2 border-black rounded-md px-4 py-1 text-sm font-medium hover:-ml-1 hover:-mt-1 hover:border-b-4 hover:border-r-4 transition" %>

        <%= button_to "Delete",
              @note,
              method: :delete,
              form: { data: { turbo_confirm: "Delete this note?" } },
              class: "border-2 border-black bg-red-500 rounded-md px-4 py-1 text-sm font-medium hover:-ml-1 hover:-mt-1 hover:border-b-4 hover:border-r-4 transition" %>
      </div>
    </div>

  </div>
</div>
