<div id="<%= dom_id note %>" class="w-full sm:w-auto my-5 rounded-xl shadow-md p-5 transition transform hover:scale-105" style="background-color: <%= note.color.presence || '#f9fafb' %>;">
  
  <!-- Title -->
  <h2 class="text-xl font-semibold text-zinc-900 mb-2">
    <%= note.title %>
  </h2>

  <!-- Description -->
  <p class="text-zinc-700">
    <%= note.description %>
  </p>

  <!-- User Info -->
  <p class="mt-3 text-sm text-zinc-500">
    Created by User ID: <%= note.user_id %>
  </p>

</div>
